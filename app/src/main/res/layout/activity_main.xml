<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/drawerLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:grid="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#ffffff"
                  android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:onClick="openMenuClick"
                android:scaleType="centerInside"
                android:src="@drawable/ic_hamburger"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/bluetoothStatusImageView"/>

            <ImageView
                android:id="@+id/bluetoothStatusImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_bluetooth_disconnected"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/kolejka"
            android:textColor="#000"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/oImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_o_inactive"/>

            <ImageView
                android:id="@+id/xImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_x_active"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/newButton">

                <tic.tack.toe.arduino.CustomGridView
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/ic_plansza"
                    grid:columnCount="3"
                    grid:rowCount="3">

                    <ImageView
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"/>

                    <ImageView
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"/>

                    <ImageView
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"/>

                    <ImageView
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"/>

                    <ImageView
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"/>

                    <ImageView
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"/>

                    <ImageView
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"/>

                    <ImageView
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"/>

                    <ImageView
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"/>

                </tic.tack.toe.arduino.CustomGridView>

            </RelativeLayout>

            <Button
                android:id="@+id/newButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="50dp"
                android:background="#000"
                android:onClick="onNewGameClick"
                android:text="@string/nowa_gra"
                android:textColor="#fff"
                android:textSize="14dp"/>

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"/>

</android.support.v4.widget.DrawerLayout>